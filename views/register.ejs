<h2 class="text-center text-big">회원가입</h2>
<form action="/register" method="post" autocomplete="off" id="admin" class="register_form">
  <fieldset>
    <legend>Member Register</legend>
    <div>
      <label for="user_id">아이디</label>
      <input type="text" name="user_id" id="user_id" placeholder="아이디" />
    </div>
    <div>
      <label for="user_pwd">비밀번호</label>
      <input type="password" name="user_pwd" id="user_pwd" placeholder="비밀번호" />
    </div>
    <div>
      <label for="user_pwd2">비밀번호 확인</label>
      <input type="password" name="user_pwd2" id="user_pwd2" placeholder="비밀번호 확인" />
    </div>
    <div>
        <label for="user_nick">별명</label>
        <input type="text" name="user_nick" id="user_nick" placeholder="별명" />
      </div>
    <div>
        <label for="user_email">이메일</label>
        <input type="email" name="user_email" id="user_email" placeholder="이메일" />
      </div>
    <div class="d-flex align-center gap-1">
        <input type="submit" value="로그인" class="btn btn-admin" />
        <input type="reset" value="취소" class="btn btn-admin" />        
    </div>
  </fieldset>
</form>
