<div class="form-ui">
    <h2><%= locals.title %></h2>
    <hr class="my-1">
    <form action="/edit" method="PUT" id="edit_form">
        <div class="d-flex">
            <label for="title" class="flex-1 text-center text-bold">제목</label>
            <input type="text" name="title" id="title" class="p-quarter flex-4" value="<%= data.title %>">
        </div>
        <div class="d-flex my-1">
            <label for="content" class="flex-1 text-center text-bold">내용</label>
            <!-- <input type="text" name="title" id="title"> -->
             <textarea cols="30" rows="10" id="content" name="content" class="p-quarter flex-4"><%= data.content %></textarea>
        </div>
        <div class="d-flex flex-end gap-1">
            <input type="reset" value="취소" class="btn btn-modify">
            <input type="submit" value="수정" class="btn btn-write">
        </div>
    </form>
</div>